{
    "build": {
        "dockerfile": "Dockerfile"
    },

    "updateContentCommand": "npm install",
    "postAttachCommand": "npm start",

    "remoteUser": "node",

    "forwardPorts": [3000],

    // More options on containers.dev
    "portsAttributes": {
        "3000": {
            "label": "React.js",
            "onAutoForward": "openPreview"
        }
    }
}